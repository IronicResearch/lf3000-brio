#-----------------------------------------------------------------------------
# Brio/System/Font
#-----------------------------------------------------------------------------
Import('*')

module_name	= 'Font'
mpi_name	= module_name + 'MPI'

#-----------------------------------------------------------------------------
# Setup module source files and libraries
#-----------------------------------------------------------------------------
modsrcs		= FindModuleSources(Dir('.'))
mpisrcs		= FindMPISources(Dir('.'))
modlibs		= ['freetype', 'DebugMPI']
mpilibs		= []
						
#-----------------------------------------------------------------------------
# Modify the build environment and build the module
#-----------------------------------------------------------------------------
myenv		= env.Copy()
myenv.Append(CPPPATH = ['#ThirdParty/FreeType/Include',
						'#ThirdParty/FreeType/Include/freetype'])
# Distinguish x86 vs ARM library binaries
if local_vars['is_emulation']:
	myenv.Append(LIBPATH = ['#ThirdParty/FreeType/Libs/x86'])
	myenv.Append(RPATH   = ['#ThirdParty/FreeType/Libs/x86'])
else:
	myenv.Append(LIBPATH = ['#ThirdParty/FreeType/Libs/arm'])
	myenv.Append(RPATH   = ['#ThirdParty/FreeType/Libs/arm'])
						
mymodule	= MakeMyModule(myenv, module_name, modsrcs, modlibs, 0)
mympi		= MakeMyModule(myenv, mpi_name, mpisrcs, mpilibs, 1)
Depends(mympi, mymodule)

#-----------------------------------------------------------------------------
# Modify the build environment and build and run the unit tests
#-----------------------------------------------------------------------------
RunMyTests(module_name, [], mpilibs + ['EventMPI'], myenv)

Return('mymodule', 'mympi')
